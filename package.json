{
  "name": "xiaomi-adapter",
  "display_name": "xiaomi",
  "version": "0.0.1",
  "description": "xiaomi device for Mozilla WebThings Gateway",
  "author": "Mozilla IoT",
  "main": "main.py",
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "xiaomi"
  ],
  "homepage": "https://github.com/FullMentalPanic/xiaomi-adapter",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/FullMentalPanic/xiaomi-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/FullMentalPanic/xiaomi-adapter/issues"
  },
  "files": [
    "LICENSE",
    "main.py",
    "lib",
    "pkg/__init__.py",
    "pkg/tplink_adapter.py",
    "pkg/tplink_device.py",
    "pkg/tplink_property.py",
    "pkg/util.py"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "python3 {path}/main.py",
    "config": {
      "addresses": [],
      "token": [],
      "module":{
        "type": "string",
        "enum": [
          "philips_bulb"
        ]
    },
    "schema": {
      "type": "object",
      "required": [
        "addresses"
      ],
      "properties": {
        "addresses": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
